<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - ShopSmart</title>
        <link rel="stylesheet" href="~/css/style.css">
        
        <!-- Google Maps -->
    </head>

    <body class="d-flex flex-column min-vh-100">
        <!-- Header -->
        <header class="bg-dark text-white py-1">
            <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand" href="/Home">
                <img src="~/favicon.ico" alt="ShopSmart Logo" class="d-inline-block" width="60" height="60">
            </a>
            <nav>
                <ul class="nav">
                <li class="nav-item"><a class="nav-link text-white" href="/Home">Home</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/Product">Search</a></li>
                <li class="nav-item"><a class="btn btn-warning" href="/Cart">Cart</a></li>
                </ul>
            </nav>
            </div>
        </header>

        <main role="main" class="flex-grow-1 d-flex flex-column">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p>&copy; 2025 ShopSmart. All rights reserved.</p>
        </div>
        </footer>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>